import unittest
from task import count_cross_tribe_pairs


class TestTribePairs(unittest.TestCase):
    def test_example_1(self):
        data = [(1, 2), (2, 4), (3, 5)]
        self.assertEqual(count_cross_tribe_pairs(data), 4)

    def test_example_2(self):
        data = [(1, 2), (2, 4), (1, 3), (3, 5), (8, 10)]
        self.assertEqual(count_cross_tribe_pairs(data), 6)

    def test_single_tribe(self):
        data = [(1, 2), (2, 4), (1, 3)]
        self.assertEqual(count_cross_tribe_pairs(data), 0)

    def test_no_pairs(self):
        data = []
        self.assertEqual(count_cross_tribe_pairs(data), 0)

    def test_disjoint_tribes(self):
        data = [(1, 2), (3, 4), (5, 6)]
        self.assertEqual(count_cross_tribe_pairs(data), 6)


if __name__ == "__main__":
    unittest.main()
